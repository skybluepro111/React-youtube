extends layout

block content
  .container.login
    .row
      .col-md-4.col-md-offset-7
        .panel.panel-default
          .panel-heading
            img#logo(style='float: right')
            span.glyphicon.glyphicon-lock
            |  Login
          .panel-body
            form.form-horizontal(action='/login', method='post')
              .form-group
                label.col-sm-3.control-label(for='inputEmail3')
                  | Email
                .col-sm-9
                  input#inputEmail3.form-control(type='text', name='username', placeholder='Username', required='')
              .form-group
                label.col-sm-3.control-label(for='inputPassword3')
                  | Password
                .col-sm-9
                  input#inputPassword3.form-control(type='password', name='password', placeholder='Password', required='')
              .form-group
                .col-sm-offset-3.col-sm-9
                  .checkbox
                    label
                      input(type='checkbox')
                      | Recuérdame
              .form-group.last
                .col-sm-offset-3.col-sm-9
                  button.btn.btn-success.btn-sm(type='submit')
                    | Entra 
                  | &nbsp;
                  button.btn.btn-default.btn-sm(type='reset')
                    | Reset
          if message
            .panel-footer.error
              p #{message}
          .panel-footer
            | Olvidaste la contraseña &nbsp;
            a(href='https://forums.interpretame.com/reset') Recupérala aquí
          .panel-footer
            | Aún sin registrar &nbsp;
            a(href='https://forums.interpretame.com/register') Regístrate aquí

